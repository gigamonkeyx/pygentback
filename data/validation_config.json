{
  "validation_interval_minutes": 30,
  "web_app_url": "http://127.0.0.1:5000",
  "auto_fix_enabled": true,
  "notification_enabled": false,
  "quality_thresholds": {
    "paper_links_success_rate": 80.0,
    "content_quality_score": 85.0,
    "global_perspectives_score": 70.0,
    "web_app_uptime": 95.0
  },
  "auto_fix_strategies": {
    "broken_links": "replace_with_scholar_search",
    "missing_abstracts": "generate_placeholder",
    "missing_authors": "add_placeholder"
  },
  "monitoring": {
    "enable_performance_tracking": true,
    "enable_error_tracking": true,
    "enable_uptime_monitoring": true
  },
  "reporting": {
    "generate_daily_reports": true,
    "generate_weekly_summaries": true,
    "save_validation_history": true,
    "max_history_entries": 1000
  },
  "automation": {
    "auto_deploy_on_validation_pass": false,
    "auto_rollback_on_critical_failure": false,
    "auto_fix_critical_issues": true,
    "auto_update_dependencies": false
  }
}
