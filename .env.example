# PyGent Factory Environment Configuration

# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:54321/pygent_factory
SUPABASE_URL=http://localhost:54321
SUPABASE_KEY=your_supabase_anon_key_here

# Async Database Configuration
ASYNC_DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:54321/pygent_factory

# AI API Keys
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
OLLAMA_BASE_URL=http://localhost:11434

# MCP Configuration
MCP_SERVER_PATH=/path/to/mcp/servers
MCP_LOG_LEVEL=INFO
MCP_AUTO_START=true
MCP_RESTART_FAILED=true
MCP_MAX_RESTARTS=3
MCP_HEALTH_CHECK_INTERVAL=30

# Frontend Configuration
VITE_API_URL=http://localhost:8080
VITE_WS_URL=ws://localhost:8080
VITE_DEBUG=true
VITE_DEFAULT_THEME=system
VITE_ENABLE_ANIMATIONS=true

# Application Configuration
PYGENT_ENV=development
PYGENT_LOG_LEVEL=DEBUG
PYGENT_GPU_ENABLED=false
PYGENT_API_PORT=8000
PYGENT_MAX_WORKERS=1

# Security Configuration
SECRET_KEY=your_super_secret_key_change_in_production_minimum_32_characters
JWT_SECRET=your_jwt_secret_change_in_production_minimum_32_characters

# Feature Flags
FEATURE_REASONING_ENABLED=true
FEATURE_EVOLUTION_ENABLED=true
FEATURE_SEARCH_ENABLED=true
FEATURE_MCP_ENABLED=true
FEATURE_MONITORING_ENABLED=true
FEATURE_CHAT_ENABLED=true
MCP_TIMEOUT=30

# Vector Database Configuration
CHROMADB_URL=http://localhost:8000
CHROMADB_COLLECTION_NAME=pygent_knowledge

# Security Configuration
SECRET_KEY=your_super_secret_key_change_this_in_production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Redis Configuration (Optional)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# Application Configuration
APP_NAME=PyGent Factory
APP_VERSION=1.0.0
DEBUG=true
LOG_LEVEL=INFO

# FastAPI Configuration
HOST=0.0.0.0
PORT=8080
RELOAD=true

# RAG Configuration
EMBEDDING_MODEL=all-MiniLM-L6-v2
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
MAX_SEARCH_RESULTS=10
SIMILARITY_THRESHOLD=0.7

# Agent Configuration
DEFAULT_AGENT_TIMEOUT=300
MAX_CONCURRENT_AGENTS=10
AGENT_MEMORY_LIMIT=1000

# Evaluation Configuration
EVALUATION_TIMEOUT=600
BENCHMARK_SUITE_PATH=./data/benchmarks

# Monitoring Configuration (Optional)
SENTRY_DSN=your_sentry_dsn_here
PROMETHEUS_PORT=9090

# Development Configuration
PYTEST_TIMEOUT=30
COVERAGE_THRESHOLD=80

# File Storage Configuration
UPLOAD_DIR=./data/uploads
MAX_FILE_SIZE=10485760  # 10MB
ALLOWED_EXTENSIONS=.txt,.md,.pdf,.docx,.json,.yaml,.yml

# MCP Server Configurations
MCP_FILESYSTEM_ALLOWED_PATHS=D:/mcp/pygent-factory,D:/mcp,./workspace,./data,./src,./docs,./tests,./tools,./examples
MCP_POSTGRES_CONNECTION_STRING=postgresql://postgres:postgres@localhost:54321/pygent_factory
MCP_GITHUB_TOKEN=your_github_token_here
MCP_BRAVE_SEARCH_API_KEY=your_brave_search_api_key_here

# Docker Configuration
POSTGRES_DB=pygent_factory
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_HOST=localhost
POSTGRES_PORT=54321

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
